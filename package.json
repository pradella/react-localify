{
  "name": "react-localify",
  "private": false,
  "version": "1.0.5-alpha.0",
  "type": "module",
  "description": "A React library for effortless app localization",
  "repository": {
    "type": "git",
    "url": "https://github.com/pradella/react-localify.git"
  },
  "homepage": "https://react-localify.vercel.app/",
  "keywords": [
    "react",
    "localization",
    "i18n",
    "npm",
    "library"
  ],
  "license": "MIT",
  "author": "Mauricio Pradella",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "deploy:npm": "bash deploy-npm.sh",
    "deploy:npm:alpha": "bash deploy-npm.sh alpha",
    "test": "vitest",
    "size-report": "npx vite-bundle-visualizer"
  },
  "engines": {
    "node": ">=16"
  },
  "dependencies": {
    "dompurify": "^3.0.5",
    "html-react-parser": "^4.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "slugify": "^1.6.6"
  },
  "devDependencies": {
    "@testing-library/react": "^14.0.0",
    "@types/dompurify": "^3.0.2",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.3",
    "@vitejs/plugin-react-swc": "^3.3.2",
    "eslint": "^8.45.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "jsdom": "^22.1.0",
    "typescript": "^5.0.2",
    "vite": "^4.4.5",
    "vite-plugin-dts": "^3.3.1",
    "vitest": "^0.33.0"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "files": [
    "dist"
  ],
  "main": "dist/index.umd.js",
  "module": "dist/index.es.js",
  "types": "dist/lib/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.umd.js",
      "types": "./dist/lib/index.d.ts"
    }
  }
}
